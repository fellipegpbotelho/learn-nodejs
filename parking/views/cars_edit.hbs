<section class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center">Edit car</h4>
    </div>
    <div class="panel-body">
        <form action="/cars/{{car._id}}" method="POST">
            <input type="hidden" value="PUT" name="_method">
            <div class="form-group">
                <label for="control-label">Driver name:</label>
                <input type="text" name="driverName" class="form-control" placeholder="Driver name..." value="{{car.driverName}}">
            </div>
            <div class="form-group">
                <label for="control-label">License Plate:</label>
                <input type="text" name="licensePlate" class="form-control" placeholder="License Plate..." value="{{car.licensePlate}}">
            </div>
            <div class="form-group">
                <select name="status" class="form-control">
                    {{#equals car.status 'IN'}}
                        <option value="IN" selected>INSIDE</option>
                        <option value="OUT">OUTSIDE</option>
                        <option value="-1">Choose an option</option>
                    {{/equals}}
                    {{#equals car.status 'OUT'}}
                        <option value="IN">INSIDE</option>
                        <option value="OUT" selected>OUTSIDE</option>
                        <option value="-1">Choose an option</option>
                    {{/equals}}
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary">
            </div>
        </form>
    </div>
</section>