extends ./../layout/main

block content
    div(class="col-xs-12 col-md-12")
        h2(class="text-center") Users registered
        table(class="table table-bordered")
            thead
                tr
                    th Name
                    th Username
                    th E-mail
                    th Actions
            tbody
                each user in users
                    tr
                        td= user.name
                        td= user.username
                        td= user.email
                        td
                            form(action="/users/" + user._id + "/?_method=DELETE", method="POST")
                                button(type="submit", class="btn btn-primary", onclick="confirm('Delete?')") Delete