<section class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center">Create a new car</h4>
    </div>
    <div class="panel-body">
        <form action="/cars" method="post">
            <div class="form-group">
                <label for="control-label">Driver name:</label>
                <input type="text" name="driverName" class="form-control" placeholder="Driver name...">
            </div>
            <div class="form-group">
                <label for="control-label">License Plate:</label>
                <input type="text" name="licensePlate" class="form-control" placeholder="License Plate...">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>
</section>