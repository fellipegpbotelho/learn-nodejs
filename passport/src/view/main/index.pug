extends ./../layout/main

block content
	div(class="col-xs-12 col-md-12")
    	h1 Hello expressjs + passportjs
    div(class="col-xs-12 col-md-12")
    	if (user)
    		a(href="/auth/logout", class="btn btn-danger") Logout
    div(class="col-xs-12 col-md-12")
    	if (user)
    		h2 You're logged in
    	else
    		h2 Please, log in
    		a(href="/auth") Click here